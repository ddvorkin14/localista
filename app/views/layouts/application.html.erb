<!DOCTYPE html>
<html>
  <head>
    <title>Localista</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_pack_tag "application" %>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <%= react_component('util/Navbar', { current_user: current_user }) %>
    <div class="mx-auto">
      <% if notice %>
        <%= react_component('util/ToastMessage', { message: notice, type: 'info' }) %>
      <% end %>
      <% if alert %>
        <%= react_component('util/ToastMessage', { message: alert, type: 'error' }) %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
